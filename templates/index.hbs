<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <style>
      /* CSS styles for the table */ table { border-collapse: collapse; width:
      100%; border: 1px solid #ddd; } th, td { padding: 8px; text-align: left;
      border-bottom: 1px solid #ddd; } th { background-color: #f2f2f2; }
      tr:hover { background-color: #f5f5f5; }
    </style>
  </head>
  <body>

    <h2>User Details</h2>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Age</th>
          <th>Country</th>
        </tr>
      </thead>
      <tbody>
        {{#each users as |user|}}
          <tr>
            <td>{{user.name}}</td>
            <td>{{user.age}}</td>
            <td>{{user.country}}</td>
          </tr>
        {{/each}}

      </tbody>
    </table>

  </body>
</html>